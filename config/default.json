{
  "api": {
    "http": {
      "host": "localhost",
      "port": 3030,
      "secure": false
    },
    "ws": {
      "host": "localhost",
      "port": 3333,
      "secure": false
    },
    "paginate": {
      "default": 10,
      "max": 50
    },
    "uuidUnknown": "00000000-0000-0000-0000-000000000000"
  },

  "file": {
    "public": "../public/",
    "basePath": "."
  },

  "service": {
    "auth": {
      "persistence": {
        "mongodb": {
          "prefix": "auth_",
          "url": "mongodb://localhost:27017/mb-api-auth",
          "dbName": "mb-api-auth"
        }
      }
    },
    "resources": {
      "persistence": {
        "mongodb": {
          "prefix": "res_",
          "url": "mongodb://localhost:27017/mb-api-resources",
          "dbName": "mb-api-resources"
        }
      }
    },
    "system": {
      "persistence": {
        "mongodb": {
          "prefix": "sys_",
          "url": "mongodb://localhost:27017/mb-api-system",
          "dbName": "mb-api-system"
        }
      }
    }
  },

  "authentication": {
    "path": "/authentication",
    "strategies": ["jwt", "local", "auth0"],

    "service": "users",
    "idField": "uuid",
    "secret": "AUTH_SECRET",

    "jwks": {
      "secret": {
        "cache": true,
        "rateLimit": true,
        "jwksRequestsPerMinute": 5,
        "jwksUri": "https://motionbank.eu.auth0.com/.well-known/jwks.json"
      }
    },

    "jwt": {
      "audience": "https://motionbank-api.herokuapp.com",
      "issuer": "https://motionbank.eu.auth0.com/",
      "callbackURL": "http://localhost:3030/users/callback",
      "algorithm": "RS256",
      "expiresIn": "1d"
    },

    "local": {
      "entity": "user",
      "usernameField": "email",
      "passwordField": "password"
    },

    "auth0": {
      "name": "auth0",
      "secretOrKey": "JWT_SECRET",
      "idField": "uuid",
      "clientID": "AUTH0_CLIENT_ID",
      "clientSecret": "AUTH0_CLIENT_SECRET",
      "domain": "motionbank.eu.auth0.com",
      "scope": ["openid", "email", "profile"]
    },

    "cookie": {
      "enabled": true,
      "httpOnly": false,
      "secure": false
    }
  }
}
