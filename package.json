{
  "name": "@motionbank-js/motionbank-api",
  "productName": "Motion Bank API",
  "description": "A barebones Feathers API server",
  "version": "0.1.1",
  "homepage": "https://github.com/motionbank-js/motionbank-api",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/motionbank-js/motionbank-api.git"
  },
  "bugs": {
    "url": "https://github.com/motionbank-js/motionbank-api/issues"
  },
  "main": "dist",
  "scripts": {
    "babel": "babel src --out-dir dist",
    "dev": "node -r babel-core/register src",
    "docs": "npm run docs:prepare && npm run docs:init && npm run docs:api && gitbook build",
    "docs:api": "npm run docs:init; jsdoc2md -c .jsdocrc.json --separators --files src/**/*.js >> .readme/api.md",
    "docs:clean": "rimraf _book",
    "docs:init": "mkdirp .readme && echo \"# API Documentation\" > .readme/api.md",
    "docs:prepare": "rimraf _book && gitbook install",
    "lint": "eslint src/. test/. --config .eslintrc.js",
    "metapak": "metapak",
    "mocha": "NODE_ENV=test mocha --require babel-core/register test/ --recursive --exit",
    "start": "node dist",
    "test": "npm run lint && npm run mocha"
  },
  "keywords": [
    "feathers"
  ],
  "author": "Copyright Â© 2018 Mainz University of Applied Sciences (Motion Bank Project)",
  "directories": {
    "lib": "src",
    "test": "test/"
  },
  "engines": {
    "node": "^9.0.0",
    "npm": ">= 3.0.0"
  },
  "metapak": {
    "configs": [
      "node",
      "travis",
      "babel",
      "eslint",
      "readme",
      "jsdoc",
      "codeclimate"
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.3",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-export-default": "^7.0.0-beta.3",
    "babel-preset-env": "^1.6.1",
    "chai": "^4.1.2",
    "chance": "^1.0.12",
    "cross-env": "^5.1.1",
    "eslint": "^4.13.1",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "gitbook-cli": "2.3.1",
    "jsdoc": "^3.5.5",
    "jsdoc-babel": "^0.3.0",
    "jsdoc-to-markdown": "^3.0.3",
    "metapak": "^1.0.3",
    "metapak-motionbank": "^1.6.4",
    "mkdirp": "^0.5.1",
    "mocha": "^4.0.1",
    "request": "^2.83.0",
    "request-promise": "^4.2.2",
    "rimraf": "^2.6.2",
    "sinon": "^4.1.3",
    "sinon-chai": "^2.14.0"
  },
  "license": "MIT",
  "appConfig": {
    "apiHost": "https://api.motionbank.org",
    "apiHostLocal": "http://localhost:3030",
    "idField": "uuid"
  },
  "dependencies": {
    "@feathersjs/configuration": "^1.0.1",
    "@feathersjs/express": "^1.1.2",
    "@feathersjs/feathers": "^3.0.2",
    "@motionbank-js/base": "git+https://github.com/motionbank-js/base.git",
    "@motionbank-js/feathers-hooks": "git+https://github.com/motionbank-js/feathers-hooks.git",
    "@motionbank-js/feathers-services": "git+https://github.com/motionbank-js/feathers-services.git",
    "@motionbank-js/feathers-sockets": "git+https://github.com/motionbank-js/feathers-sockets.git",
    "@motionbank-js/persistence": "git+https://github.com/motionbank-js/persistence.git",
    "bluebird": "^3.5.1",
    "compression": "^1.7.1",
    "cors": "^2.8.4",
    "dotenv": "^4.0.0",
    "helmet": "^3.9.0",
    "mongodb": "^3.0.2",
    "nedb": "^1.8.0",
    "serve-favicon": "^2.4.5",
    "superagent": "^3.8.2"
  }
}
