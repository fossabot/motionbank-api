{
  "name": "libmb-feathers-api",
  "productName": "libMB Feathers API",
  "description": "A barebones Feathers API server",
  "version": "1.0.0",
  "homepage": "https://github.com/motionbank/libmb-feathers-api",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/motionbank/libmb-feathers-api.git"
  },
  "bugs": {
    "url": "https://github.com/motionbank/libmb-feathers-api/issues"
  },
  "main": "dist",
  "scripts": {
    "docs": "npm run docs:prepare && npm run docs:init && npm run docs:api && gitbook build",
    "docs:api": "npm run docs:init; jsdoc2md -c .jsdocrc.json --separators --files src/**/*.js >> .readme/api.md",
    "docs:clean": "rimraf _book",
    "docs:init": "mkdirp .readme && echo \"# API Documentation\" > .readme/api.md",
    "docs:prepare": "rimraf _book && gitbook install"
  },
  "keywords": [
    "feathers"
  ],
  "author": "Motion Bank / Mainz University of Applied Sciences",
  "directories": {
    "lib": "src",
    "test": "test/"
  },
  "engines": {
    "node": "^9.0.0",
    "npm": ">= 3.0.0"
  },
  "metapak": {
    "configs": [
      "babel",
      "eslint",
      "readme",
      "codeclimate",
      "feathers"
    ]
  },
  "devDependencies": {
    "metapak": "^1.0.2",
    "metapak-motionbank": "^1.5.6",
    "gitbook-cli": "^2.3.2",
    "jsdoc": "^3.5.5",
    "jsdoc-to-markdown": "^3.0.3",
    "mkdirp": "^0.5.1",
    "rimraf": "^2.6.2"
  },
  "license": "MIT"
}
